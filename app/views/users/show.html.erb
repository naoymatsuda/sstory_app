<div class ="row">
    <aside class="col-md-4">
        <section class="user_info">
            <% if @user.image? %>
              <%= image_tag @user.image.url, class: "user_image"%>
            <% else %>
              <%= image_tag "noimage.jpg", :size => '100x100' %>
            <% end %>
            <h1 style ="margin-top: 10px;"><%= @user.name %></h1>
                <%= @user.email %><br>
                <%= @user.profile%>
        </section>
<% if current_user?(@user) %>
    <%= link_to "編集" , edit_user_path(@user),class: "btn btn-md btn-primary" %>
    <%= link_to "削除" , @user , method: :delete, 
                                 class: "btn btn-md btn-danger",
                                 data: { confirm: "本当によろしいですか？"} %>
   <% end %>
</aside>
<div class="col-md-8">
    <% if @user.stories.any? %>
        <h3>小噺集(<%= @user.stories.count %>)</h3>
        <ol class="stories">
            <%= render @stories %>
        </ol>
        <%= will_paginate @stories %>
    <% end %>
    <div>
</div>